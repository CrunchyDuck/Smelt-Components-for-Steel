<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <RecipeDef>
    <defName>ExtractMetalFromIndustrialComponents</defName>
    <label>smelt metal from simple components</label>
    <description>Use heat and strong electromagnets to extract useful metal from simple components.</description>
    <jobString>Smelting metal from simple components.</jobString>
    <workAmount>200</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Steel>10</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
	<recipeUsers>
	  <li>ElectricSmelter</li>
	</recipeUsers>
  </RecipeDef>
  
